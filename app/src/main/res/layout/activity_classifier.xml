<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassifierActivity">

    <!-->placeholder image<!-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/upload"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="6dp"
        app:shapeAppearanceOverlay="@style/RoundedSquare"/>

    <LinearLayout
        android:id="@+id/linLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        >

        <!-->gallery button<!-->
        <Button
            android:id="@+id/selectbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/lavender"
            android:text="@string/gallery"
            android:textColor="@color/white"/>
        <!-->camera button<!-->
        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/lavender"
            android:text="@string/camera"
            android:textColor="@color/white"/>
        <!-->prediction button<!-->
        <Button
            android:id="@+id/predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/lavender"
            android:text="@string/predict"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linLayout"
        android:layout_marginStart="13sp"
        android:layout_marginEnd="13sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-->flower name header<!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_header_view"
                android:text=""
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textIsSelectable="true"
                android:textColor="@color/lavender"/>
            <!-->flower name body<!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_view"
                android:text=""
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textColor="@color/lavender"/>
            <!-->flower toxicity header<!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/toxic_header_view"
                android:textIsSelectable="true"
                android:textColor="@color/lavender"/>
            <!-->flower toxicity body<!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:id="@+id/toxic_body_view"
                android:textIsSelectable="true"
                android:textColor="@color/lavender"/>
            <!-->growing conditions header<!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/cult_header_view"
                android:textIsSelectable="true"
                android:textColor="@color/lavender"/>
            <!-->growing conditions body<!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:id="@+id/cult_body_view"
                android:textIsSelectable="true"
                android:textColor="@color/lavender"
                android:layout_marginBottom="50dp"/>




        </LinearLayout>



    </ScrollView>

</RelativeLayout>