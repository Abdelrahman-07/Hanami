<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" /> <!-- Devices running Android 12L (API level 32) or lower -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" /> <!-- Devices running Android 13 (API level 33) or higher -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /> <!-- To handle the reselection within the app on devices running Android 14 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Hanami"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowerImageClassifier">
        <activity
            android:name=".PrivacyActivity"
            android:exported="false"
            android:label="@string/title_activity_privacy"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".TermsActivity"
            android:exported="false"
            android:label="@string/title_activity_terms"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".RateActivity"
            android:exported="false"
            android:label="@string/title_activity_rate"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".ClassifierActivity"
            android:exported="false"
            android:label="@string/title_activity_classifier"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".DiseaseActivity"
            android:exported="false"
            android:label="@string/title_activity_disease"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".FlowerActivity"
            android:exported="false"
            android:label="@string/title_activity_flower"
            android:theme="@style/Theme.FlowerImageClassifier" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>